{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ShakeDown Launcher",
  "version": "0.1.0",
  "identifier": "com.shakedown.launcher",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "ShakeDown Launcher",
        "width": 847,
        "height": 546,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    },
    "withGlobalTauri": true
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": ["https://your-update-server.com/update"],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ5MEM0MjNEMEE4NjY5RkUK"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "languages": ["English"]
      }
    },
    "createUpdaterArtifacts": true
  }
}