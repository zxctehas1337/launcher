{
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/auth/login",
      "destination": "/api/auth?action=login"
    },
    {
      "source": "/api/auth/register",
      "destination": "/api/auth?action=register"
    },
    {
      "source": "/api/auth/resend-code",
      "destination": "/api/auth?action=resend-code"
    },
    {
      "source": "/api/auth/verify-code",
      "destination": "/api/auth?action=verify-code"
    },
    {
      "source": "/api/users/:id",
      "destination": "/api/users?id=:id"
    },
    {
      "source": "/api/hwid/set",
      "destination": "/api/hwid?action=set"
    },
    {
      "source": "/api/hwid/reset",
      "destination": "/api/hwid?action=reset"
    },
    {
      "source": "/api/hwid/verify",
      "destination": "/api/hwid?action=verify"
    },
    {
      "source": "/api/hwid/:userId",
      "destination": "/api/hwid?action=get&userId=:userId"
    },
    {
      "source": "/api/products/:id",
      "destination": "/api/products?id=:id"
    },
    {
      "source": "/api/versions/:id",
      "destination": "/api/versions?id=:id"
    },
    {
      "source": "/api/keys/activate",
      "destination": "/api/keys?action=activate"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}